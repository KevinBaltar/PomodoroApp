    "mongoose": "^7.0.0",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.20",
    "supertest": "^7.1.0"
  }
